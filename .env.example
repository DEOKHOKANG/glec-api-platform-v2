# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME=GLEC API Platform v2
API_VERSION=v1

# Database - Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# API Keys
API_KEY_PREFIX=glec_
RATE_LIMIT_WINDOW=15min
RATE_LIMIT_MAX_REQUESTS=100

# External Services
MAPS_API_KEY=your_google_maps_api_key
CLIMATIQ_API_KEY=your_climatiq_api_key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Postman Integration
POSTMAN_API_KEY=your_postman_api_key
POSTMAN_COLLECTION_ID=your_collection_id

# Email Service (optional)
EMAIL_SERVICE_API_KEY=your_email_service_key
EMAIL_FROM=noreply@glec-api.com

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
DATA_DOG_API_KEY=your_datadog_api_key